# {{ ansible_managed }}
{% if dns_domain is defined %}
domain {{dns_domain}}
{% endif %}

{% if is_ipaclient %}
{% for nameserver in ipa_dns_servers %}
nameserver {{nameserver}}
{% endfor %}
{% else %}
{% for nameserver in dns_servers %}
nameserver {{nameserver}}
{% endfor %}
{% endif %}

{% if dns_searchs is defined %}
search {% for name in dns_searchs %}{{name}} {% endfor %}
{% endif %}

{% if dns_options is defined and not is_dns_server %}
{% for option in dns_options %}
options {{option}}
{% endfor %}
{% endif %}


